{
	"name": "yum-novel-ext",
	"displayName": "yumNovelExt",
	"description": "extension for novel writing.",
	"version": "0.0.9",
	"publisher": "yumCommunication",
	"license": "Apache-2.0",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/yum-Communication/japanesenovel-vscode-extension.git"
	},
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:noveltext",
		"onCommand:yumNovelExt.extractRuby",
		"onCommand:yumNovelExt.extractRubyAll",
		"onCommand:yumNovelExt.export.narou",
		"onCommand:yumNovelExt.export.kakuyomu"
	],
	"main": "./out/main",
	"contributes": {
		"commands": [
			{
				"command": "yumNovelExt.extractRuby",
				"title": "ルビの抽出（現在のファイル）",
				"shortTitle": "Extraction ruby",
				"category": "Novel"
			},
			{
				"command": "yumNovelExt.extractRubyAll",
				"title": "ルビの抽出（全てのファイル）",
				"shortTitle": "Extraction ruby all",
				"category": "Novel"
			},
			{
				"command": "yumNovelExt.export.narou",
				"title": "『小説家になろう』向けに出力",
				"shortTitle": "NAROU",
				"category": "Novel"
			},
			{
				"command": "yumNovelExt.export.kakuyomu",
				"title": "『カクヨム』向けに出力",
				"shortTitle": "KAKUYOMU",
				"category": "Novel"
			}
		],
		"languages": [
			{
				"id": "noveltext",
				"aliases": [
					"Novel text"
				],
				"extensions": [
					".txt",
					".nvl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "noveltext",
				"scopeName": "novel.text",
				"path": "./syntaxes/novel.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "NovelText",
				"properties": {
					"NovelText.uniquenouns": {
						"type": "string",
						"default": "uniquenouns.json",
						"description": "固有名詞の定義"
					},
					"NovelText.formatting.paragraphIndentNum": {
						"type": "number",
						"default": "1",
						"description": "段落のインデントの数",
						"minimum": 0,
						"maximum": 10,
						"scope": "resource"
					},
					"NovelText.formatting.paragraphIndentType": {
						"type": "string",
						"enum": [
							"半角空白",
							"全角空白",
							"タブ",
							"EM SP"
						],
						"default": "全角空白",
						"description": "段落のインデントの種類",
						"scope": "resource"
					},
					"NovelText.formatting.dialogueIndentNum": {
						"type": "number",
						"default": "0",
						"description": "台詞のインデントの数",
						"minimum": 0,
						"maximum": 10,
						"scope": "resource"
					},
					"NovelText.formatting.dialogueIndentType": {
						"type": "string",
						"enum": [
							"半角空白",
							"全角空白",
							"タブ",
							"EM SP"
						],
						"default": "全角空白",
						"description": "台詞のインデントの種類",
						"scope": "resource"
					},
					"NovelText.formatting.periodAtEndOfDialogue": {
						"type": "string",
						"enum": [
							"追加",
							"削除",
							"そのまま"
						],
						"default": "そのまま",
						"description": "台詞末尾の句点",
						"scope": "resource"
					},
					"NovelText.formatting.spaceAfterExclamation": {
						"type": "string",
						"enum": [
							"追加",
							"削除",
							"そのまま"
						],
						"default": "追加",
						"description": "感嘆符・疑問符の後のスペース",
						"scope": "resource"
					},
					"NovelText.formatting.spaceAfterExclamationType": {
						"type": "string",
						"enum": [
							"半角空白",
							"全角空白",
							"タブ",
							"EM SP"
						],
						"default": "全角空白",
						"description": "追加する感嘆符・疑問符の後のスペース",
						"scope": "resource"
					},
					"NovelText.formatting.emphasisMark": {
						"type": "string",
						"enum": [
							"・ 中黒",
							"● 黒丸",
							"○ 白丸",
							"﹅ 黒ゴマ",
							"﹆ 白ゴマ"
						],
						"default": "﹅ 黒ゴマ",
						"description": "傍点（圏点）に使用するマーク",
						"scope": "resource"
					}
				}
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "name",
				"description": "名前"
			},
			{
				"id": "title",
				"description": "爵名"
			},
			{
				"id": "surname",
				"description": "姓"
			},
			{
				"id": "family",
				"description": "家名"
			},
			{
				"id": "domain",
				"description": "領地"
			},
			{
				"id": "clan",
				"description": "クラン"
			},
			{
				"id": "baptism",
				"description": "洗礼名"
			},
			{
				"id": "nickname",
				"description": "ニックネーム"
			}
		],
		"semanticTokenTypes": [
			{
				"id": "region",
				"description": "地理"
			},
			{
				"id": "character",
				"description": "人物"
			},
			{
				"id": "family",
				"description": "家系"
			},
			{
				"id": "magic",
				"description": "魔法"
			},
			{
				"id": "monster",
				"description": "魔物・怪物"
			},
			{
				"id": "animal",
				"description": "動物"
			},
			{
				"id": "plant",
				"description": "草木"
			},
			{
				"id": "crop",
				"description": "作物"
			},
			{
				"id": "food",
				"description": "食品・料理"
			}
		],
		"semanticTokenScopes": [
			{
				"language": "noveltext",
				"scopes": {
					"region.name": [
						"novel.keyword.region.name"
					],
					"character.name": [
						"novel.keyword.character.name"
					],
					"character.title": [
						"novel.keyword.character.title"
					],
					"character.surname": [
						"novel.keyword.character.surname"
					],
					"character.family": [
						"novel.keyword.character.family"
					],
					"character.domain": [
						"novel.keyword.character.domain"
					],
					"character.clan": [
						"novel.keyword.character.clan"
					],
					"character.baptism": [
						"novel.keyword.character.baptism"
					],
					"character.nickname": [
						"novel.keyword.character.nickname"
					],
					"family.name": [
						"novel.keyword.family.name"
					],
					"magic.name": [
						"novel.keyword.magic.name"
					],
					"monster.name": [
						"novel.keyword.monster.name"
					],
					"animal.name": [
						"novel.keyword.animal.name"
					],
					"plant.name": [
						"novel.keyword.plant.name"
					],
					"crop.name": [
						"novel.keyword.crop.name"
					],
					"food.name": [
						"novel.keyword.food.name"
					]
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"lint": "eslint . --ext .ts,.tsx",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch"
	},
	"dependencies": {
		"chokidar": "^3.5.2",
		"globby": "^11.0.4",
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"esbuild": "^0.12.15",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	}
}
