{
	"name": "yum-novel-ext",
	"displayName": "yumNovelExt",
	"description": "extension for novel writing.",
	"version": "0.0.2",
	"publisher": "yumCommunication",
	"license": "Apache-2.0",
	"private": "true",
	"repository": {
		"type": "git",
		"url": "https://github.com/yum-Communication/japanesenovel-vscode-extension.git"
	},
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:noveltext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
			{
				"command": "yumNovelExt.extractRuby",
				"title": "Extraction ruby from current document.",
				"shortTitle": "Extraction ruby",
				"category": "Novel"
			},
			{
				"command": "yumNovelExt.extractRubyAll",
				"title": "Extraction ruby from all documents.",
				"shortTitle": "Extraction ruby all",
				"category": "Novel"
			}
		],
		"languages": [
			{
				"id": "noveltext",
				"aliases": [
					"Novel text"
				],
				"extensions": [
					".txt",
					".nvl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "noveltext",
				"scopeName": "novel.text",
				"path": "./syntaxes/novel.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "NovelText",
				"properties": {
					"NovelText.uniquenouns": {
						"type": "string",
						"default": "uniquenouns.json",
						"description": "固有名詞の定義"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	}
}
